# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_HOURS=1
JWT_REFRESH_TOKEN_DAYS=30

# Database Configuration
# For Development: SQLite (no config needed)
# For Production: MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=clash_royale_user
MYSQL_PASSWORD=change_this_password
MYSQL_DATABASE=clash_royale_db

# Clash Royale API Configuration
# Get your API key from: https://developer.clashroyale.com/
CLASH_ROYALE_API_KEY=your-clash-royale-api-key-here

# Application Settings
PLAYER_CACHE_DURATION=300
CARDS_CACHE_DURATION=86400
ITEMS_PER_PAGE=20

# CORS Configuration (for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Frontend API URL (for frontend environment)
VITE_API_BASE_URL=http://localhost:5000/api
